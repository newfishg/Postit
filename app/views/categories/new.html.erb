<%= render 'shared/content_title', title: 'Create new category' %>

<%= render 'shared/error', obj: @category %>

<div class="well">
<%= form_for @category do |f| %>
  <div class="control-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
</div>