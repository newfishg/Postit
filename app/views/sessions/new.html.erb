<%= render 'shared/content_title', title: 'Log in' %>

<div class="well">
  <%= form_tag('/login', method: 'post') do %>

    <div calss="control-group">
      <%= label_tag :username %>
      <%= text_field_tag :username %>          
    </div>

    <div class="control-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %></div>
    <div>
    <%= submit_tag 'Log in', class: 'btn btn-success' %>
  <% end %>
</div>