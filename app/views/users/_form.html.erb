<div class="well">
  <%= form_for @user do |f| %>
  <%= render 'shared/error', obj: @user %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username %><br />
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %><br />
    </div>

    <div class="control-group">
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %><br />
    </div>

    <%= f.submit (@user.new_record? ? 'Register' : 'Update profile'), class: 'btn btn-success'%>

  <% end %>
</div>


